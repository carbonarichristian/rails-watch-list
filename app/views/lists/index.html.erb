<div class="header-card-category" id="home-cinema">
  <div class="content">Save your movies</div>
</div>
<div class="container">
  <div class="d-flex justify-content-between">
    <div><h4>My Lists</h4></div>
    <%= button_to "Create a new list", new_list_path, method: :get, class: "btn btn-primary" %>
  </div>
  <div class="cards">
    <% if @lists.length != 0 %>
      <% @lists.each do |list| %>
        <%= link_to list_path(list) do %>
          <% background_img = list.picture.attached? ? cl_image_path(list.picture.key, height: 300, crop: :fill) : image_url("ticket-2974645_1920.jpg") %>
          <div class="card-category" style="background-image: url(<%= background_img %>)">
            <div class="content">
              <%= list.name %>
            </div>
          </div>
        <% end %>
      <% end %>
    <% else %>
      <div class="card-category-no-list bg-light p-4">
        <div class="content">No list added yet</div>
      </div>
    <% end %>
  </div>
</div>
